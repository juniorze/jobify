<%- include('header') %>
<section>
  <h2>Editar Vaga:</h2>
  <section class="formulario">
    <form method="POST">
      <label>Título:</label>
      <input type="text" name="titulo" value="<%= vaga.titulo %>" /><br />
      <label>Descrição:</label>
      <textarea name="descricao"> <%= vaga.descricao %> </textarea><br />
      <label>Categoria:</label>
      <select name="categoria">
        <% categorias.forEach( categoria => { %>
        <option value="<%= categoria.id %>" <% if(categoria.id == vaga.categoria){ %>selected<% } %>><%= categoria.categoria %></option>
        <% }) %>
      </select>
      <br />
      <button>Salvar Vaga</button>
    </form>
  </section>
</section>
<%- include('footer') %>
